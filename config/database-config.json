{
  "connection": {
    "host": "prod-db.example.com",
    "port": 5432,
    "database": "devops_production",
    "username": "prod_admin",
    "ssl_mode": "require",
    "pool_size": 20,
    "timeout": 30
  },
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention_days": 30,
    "location": "/backups/database"
  },
  "replication": {
    "enabled": true,
    "replicas": 2,
    "sync_mode": "synchronous"
  },
  "development": {
    "seed_data": true,
    "reset_on_restart": true,
    "debug_queries": true
  },
  "ai_optimization": {
    "query_optimization": true,
    "index_suggestions": true,
    "auto_vacuum_ml": true
  },
  "monitoring": {
    "slow_query_threshold": 100,
    "alert_on_anomaly": true,
    "metrics_export": "prometheus"
  }
}